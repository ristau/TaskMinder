<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bfr.taskminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TodayActivity"
            android:label="@string/category_today" />
        <activity
            android:name=".ThisWeekActivity"
            android:label="@string/category_thisWeek" />
        <activity
            android:name=".BucketListActivity"
            android:label="@string/category_bucketList" />
        <activity
            android:name=".BackBurnerActivity"
            android:label="@string/category_backBurner"></activity>
        <activity android:name=".EditItemActivity"
            android:label="Add/Edit Item">
        </activity>
    </application>

</manifest>